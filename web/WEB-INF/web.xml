<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <context-param>
        <param-name>Login</param-name>
        <param-value>/signin</param-value>
    </context-param>
    
    <context-param>
        <param-name>Registration</param-name>
        <param-value>/signup</param-value>
    </context-param>
       <context-param>
        <param-name>rstToken</param-name>
        <param-value>/WEB-INF/views/resetpassword.jsp</param-value>
    </context-param>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/fc/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/views/login.jsp</jsp-file>
    </servlet>
     <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/WEB-INF/views/registration.jsp</jsp-file>
    </servlet>
     <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>vemail</servlet-name>
        <jsp-file>/WEB-INF/views/verifyemail.jsp</jsp-file>
        <!--<servlet-class>ActionLogic.verifyemail</servlet-class>-->
    </servlet>
    <servlet-mapping>
        <servlet-name>vemail</servlet-name>
        <url-pattern>/verifyemail</url-pattern>
    </servlet-mapping>
        <servlet>
        <servlet-name>eemail</servlet-name>
        <jsp-file>/WEB-INF/views/error.jsp</jsp-file>
        <!--<servlet-class>ActionLogic.verifyemail</servlet-class>-->
    </servlet>
    <servlet-mapping>
        <servlet-name>eemail</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
